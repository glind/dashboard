# Trust Layer Environment Variables
# Anti-Scam Email Analysis System

# Enable/Disable Trust Layer
TRUST_LAYER_ENABLED=true
TRUST_LAYER_RULESET_VERSION=1.0

# Google Safe Browsing API (Optional)
# Get API key: https://developers.google.com/safe-browsing/v4/get-started
GOOGLE_SAFE_BROWSING_API_KEY=

# VirusTotal API (Optional)
# Get API key: https://www.virustotal.com/gui/join-us
VIRUSTOTAL_API_KEY=

# LinkedIn OAuth (For LinkedIn Verified verification)
# Register app: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=http://localhost:8008/v1/providers/linkedin/oauth/callback

# Plugin Configuration
PLUGIN_EMAIL_AUTH_ENABLED=true
PLUGIN_DNS_RECORDS_ENABLED=true
PLUGIN_DOMAIN_WHOIS_ENABLED=true
PLUGIN_CONTENT_HEURISTICS_ENABLED=true
PLUGIN_URL_REPUTATION_ENABLED=true
PLUGIN_LINKEDIN_ENABLED=false

# Scoring Configuration
TRUST_SCORE_MIN_THRESHOLD=55
TRUST_SCORE_CAUTION_THRESHOLD=80

# Report Retention (days)
TRUST_REPORT_RETENTION_DAYS=90

# Rate Limiting
TRUST_VERIFICATION_REQUESTS_PER_DAY=10
TRUST_REPORTS_GENERATION_RATE_LIMIT=100

# Logging
TRUST_LAYER_LOG_LEVEL=INFO
