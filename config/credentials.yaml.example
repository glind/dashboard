# Credentials configuration
# Copy this to credentials.yaml and add your actual API keys

# Google APIs (OAuth handled separately)
# Set up OAuth at: https://console.cloud.google.com
# Save OAuth config as: config/google_oauth_config.json
google:
  # OAuth credentials are handled via google_oauth_config.json
  # No manual tokens needed - use web authentication

# TickTick API
ticktick:
  # For client_id/secret OAuth flow:
  client_id: "YOUR_TICKTICK_CLIENT_ID"
  client_secret: "YOUR_TICKTICK_CLIENT_SECRET"
  # OR for direct token access:
  api_token: "YOUR_TICKTICK_API_TOKEN"

# Todoist API
todoist:
  api_token: "YOUR_TODOIST_API_TOKEN"

# GitHub API  
github:
  token: "YOUR_GITHUB_PERSONAL_ACCESS_TOKEN"
  username: "YOUR_GITHUB_USERNAME"

# Weather API
weather:
  api_key: "YOUR_OPENWEATHERMAP_API_KEY"

# News API (optional)
news:
  api_key: "YOUR_NEWS_API_KEY"

# Buildly Labs API
buildly:
  base_url: "https://api.buildly.io"
  api_key: "YOUR_BUILDLY_API_KEY"

# Notes Configuration
notes:
  # Obsidian vault path
  obsidian_vault_path: "/Users/greglind/Documents/Obsidian/MyVault"
  
  # Google Drive folder ID for meeting notes
  # Get ID from URL: https://drive.google.com/drive/folders/FOLDER_ID_HERE
  google_drive_folder_id: "13tTVGHSMLlavbbLIGtk86Ynv-iCWlbAe"
  
  # Auto-create tasks from note TODOs
  auto_create_tasks: true
  
  # Number of recent notes to display
  notes_limit: 10

# Communications APIs (OAuth + Manual Token Support)
# You can either:
#   1. Use OAuth flow (recommended) - click "Connect" in dashboard
#   2. Enter API tokens manually in the UI or here

# LinkedIn API
linkedin:
  # OAuth Setup (Recommended):
  # 1. Create app at: https://www.linkedin.com/developers/apps
  # 2. Add OAuth redirect URL: http://localhost:8008/api/modules/comms/auth/linkedin/callback
  # 3. Required Products: "Sign In with LinkedIn" and "Messaging API"
  # 4. Required scopes: r_liteprofile, r_emailaddress, r_messaging
  client_id: "YOUR_LINKEDIN_CLIENT_ID"
  client_secret: "YOUR_LINKEDIN_CLIENT_SECRET"
  
  # Manual Token (Alternative):
  # Get OAuth token from: https://www.linkedin.com/developers/tools/oauth/token-generator
  # access_token: "YOUR_LINKEDIN_ACCESS_TOKEN"

# Slack API
slack:
  # OAuth Setup (Recommended):
  # 1. Create app at: https://api.slack.com/apps
  # 2. Add OAuth redirect URL: http://localhost:8008/api/modules/comms/auth/slack/callback
  # 3. User Token Scopes: channels:history, channels:read, groups:history, 
  #    im:history, im:read, mpim:history, search:read, users:read
  client_id: "YOUR_SLACK_CLIENT_ID"
  client_secret: "YOUR_SLACK_CLIENT_SECRET"
  
  # Manual Token (Alternative):
  # Get user token from: https://api.slack.com/authentication/token-types
  # token: "xoxp-YOUR-SLACK-USER-TOKEN"
  # OR use Bot token (starts with xoxb-):
  # token: "xoxb-YOUR-SLACK-BOT-TOKEN"

# Discord API
discord:
  # OAuth Setup (Recommended):
  # 1. Create app at: https://discord.com/developers/applications
  # 2. Add OAuth redirect URL: http://localhost:8008/api/modules/comms/auth/discord/callback
  # 3. Required scopes: identify, email, messages.read
  client_id: "YOUR_DISCORD_CLIENT_ID"
  client_secret: "YOUR_DISCORD_CLIENT_SECRET"
  
  # Manual Token (Alternative):
  # Get bot token from: https://discord.com/developers/applications > Bot > Token
  # token: "YOUR_DISCORD_BOT_TOKEN"
  # Optional: Your user ID for better filtering
  # user_id: "YOUR_DISCORD_USER_ID"

